<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green1"
    tools:context=".MessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButtonInLoginActivity"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/videoCallActioBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:paddingRight="38dp"
            android:text="Ongoing Voice Call"
            android:textColor="@color/white"
            android:textSize="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="65dp"
        android:background="@color/green1">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutTop"
        android:layout_alignParentBottom="true"
        android:background="@drawable/radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"

            android:layout_marginTop="170dp"
            android:layout_marginEnd="65dp"


            android:text="Zelda Logan"
            android:textColor="@color/black"
            android:textSize="45dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="144dp"

            android:layout_marginTop="225dp"
            android:layout_marginEnd="144dp"


            android:text="15:34"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/endCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="165dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="166dp"
            android:src="@drawable/group380" />

        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_below="@+id/endCall"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="62dp"
            android:layout_marginEnd="269dp"
            android:src="@drawable/maskgroup233" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_below="@+id/endCall"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="62dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="269dp"
            android:paddingTop="11dp"
            android:src="@drawable/group48" />


        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_below="@+id/endCall"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="269dp"
            android:layout_marginEnd="62dp"
            android:src="@drawable/maskgroup233" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/endCall"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="269dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="62dp"
            android:paddingTop="11dp"
            android:src="@drawable/iconmaterialmessage" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/overlapImage"
        android:layout_width="343dp"
        android:layout_height="320dp"
        android:layout_above="@id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-150dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circular_radius"
        android:paddingTop="10dp"
        android:src="@drawable/ellipse7_2x" />

</RelativeLayout>




